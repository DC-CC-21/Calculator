{
    "version": "0.2.0",
    "configurations": [
      {
        "name": ".NET Core Launch (Web)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",  // Ensure that the project is built before running
        "program": "${workspaceFolder}/bin/Debug/net8.0-windows/Calculator.dll",  // Path to the compiled app
        "args": [],
        "cwd": "${workspaceFolder}/bin/Debug/net8.0-windows/",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\b(http|https)://[\\w.-]+(?::\\d+)?(?:/[^\\s]*)?\\b"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        }
      }
    ]
  }
  